<h3>Please make the necessary changes in the form below.</h3>
{{#each whosit}}
<form action="/" method="post">
	<fieldset>
		<legend>Update Whosit Entry</legend>

		<label for="whositName">Name of Whosit: </label>
		<input id="whositName" type="text" name="whositName" value="{{whositName}}" maxlength="100">

		<br>

		<label for="whositHome">Home of Whosit: </label>
		<select id="whositHome" name="whositHome">
			<option value="{{wheresitID}}">{{whositHome}}</option>
			{{#each wheresit}}
      <option value="{{wheresitID}}">{{wheresitName}}</option>
      {{/each}}
		</select>

		<br>

		<label for="destiny">Destiny of Whosit: </label>
		<select id="destiny" name="destiny">
			<option value="{{whysitID}}">{{destiny}}</option>
			{{#each wheresit}}
       <option value="{{whysitID}}">{{whysitDescription}}</option>
       {{/each}}
		</select>

		<br>		

		<button name="updateWhosit" value="{{whositID}}">Apply changes</button>
	</fieldset>
</form>
{{/each}}